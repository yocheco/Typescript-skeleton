{
  "name": "typescript-skeleton",
  "version": "1.0.0",
  "description": "Developer gh@yocheco",
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "dev:api:backend": "NODE_ENV=dev ts-node-dev --ignore-watch node_modules  ./src/apps/api/backend/start.ts",
    "lint": "eslint src/**/*.ts{,x}",
    "lint:fix": "eslint src/**/*.ts{,x} --fix",
    "build": "npm run build:clean && npm run build:tsc && npm run build:di",
    "build:tsc": "tsc -p tsconfig.prod.json",
    "build:di": "copy 'src/**/*.{json,yaml,html,png}' dist/src",
    "build:clean": "rm -r dist; exit 0",
    "test": "npm run test:unit",
    "test:unit": "NODE_ENV=test jest ./test",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yocheco/Typescript-skeleton.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/yocheco/Typescript-skeleton/issues"
  },
  "homepage": "https://github.com/yocheco/Typescript-skeleton#readme",
  "dependencies": {
    "body-parser": "^1.19.1",
    "compression": "^1.7.4",
    "errorhandler": "^1.5.1",
    "express": "^4.17.2",
    "express-promise-router": "^4.1.1",
    "express-validator": "^6.14.0",
    "glob": "^7.2.0",
    "helmet": "^5.0.1",
    "http-status": "^1.5.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/errorhandler": "^1.5.0",
    "@types/express": "^4.17.13",
    "@types/glob": "^7.2.0",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.8",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.2.0",
    "husky": "^7.0.4",
    "jest": "^27.4.6",
    "lint-staged": "^12.1.5",
    "ts-jest": "^27.1.2",
    "ts-node": "^10.4.0",
    "ts-node-dev": "^1.1.8",
    "tslib": "^2.3.1",
    "typescript": "^4.5.4"
  },
  "lint-staged": {
    "{src,tests}/**/*.ts": [
      "eslint --cache --fix",
      "npm run test"
    ]
  }
}
